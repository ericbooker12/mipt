<h2>Teacher <%= @teacher.full_name %>'s Courses</h2>
<ul>
  <% @teacher.courses.each do |course| %>
    <% if course.title == nil %>
      <% course.title = 'Untitled' %>
    <% end %>

    <% if course.description == nil %>
      <% course.description ='No description' %>
    <% end %>

    <li><%= link_to "#{course.title}", course_path(course), {class:"course_detail"}%> | <%= link_to "Edit", edit_course_path(course), {class:"course_detail"} %><br>
      <em class="course_description">Description: <%= course.description %></em><br>

     </li>
  <% end %>
</ul>

<%= button_to "Create Course", new_teacher_course_path(params[:id]), method: "get", class:"btn btn-default btn-lg active" %>

<%= link_to 'Delete Teacher', teacher_path(@teacher),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete #{@teacher.full_name}?" }, class:"course_detail" %> |
<%= link_to 'Edit Teacher', edit_teacher_path(@teacher), {class:"course_detail"} %>
